<!-- res/drawable/card_bg.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Card background color -->
    <solid android:color="#FFFFFF" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Drop shadow / elevation (works better on CardView, but for drawable we use stroke) -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Optional padding if applied as background -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
