<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F1F8E9">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="40dp"
            android:text="ðŸŒ¾ Farmer Feedback"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp" />

        <EditText
            android:id="@+id/etFarmerName"
            android:hint="Enter Farmer Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#2E7D32" />

        <TextView
            android:id="@+id/tvDate"
            android:text="Select Date"
            android:textColor="#555"
            android:padding="12dp"
            android:background="@drawable/date_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/etFeedbackMessage"
            android:hint="Enter Feedback Message"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="top"
            android:backgroundTint="#2E7D32"
            android:layout_marginBottom="10dp" />

        <TextView
            android:text="Rating:"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginBottom="4dp" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:numStars="5"
            android:stepSize="1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSubmitFeedback"
            android:text="Submit Feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#2E7D32"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnViewFeedbacks"
            android:text="View All Feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#388E3C"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
