<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:padding="16dp" android:layout_width="match_parent" android:layout_height="match_parent">
  <ImageView android:id="@+id/imgPostPreview" android:layout_width="match_parent" android:layout_height="220dp"  android:scaleType="centerCrop"/>
  <Button android:id="@+id/btnSelectImage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Select Image" android:layout_marginTop="8dp"/>
  <EditText android:id="@+id/etCaption" android:layout_width="match_parent" android:layout_height="48dp" android:hint="Caption" android:layout_marginTop="12dp"/>
  <EditText android:id="@+id/etPrice" android:layout_width="match_parent" android:layout_height="48dp" android:hint="Expected price" android:inputType="number" android:layout_marginTop="8dp"/>
  <Button android:id="@+id/btnPost" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Post" android:layout_marginTop="12dp"/>
</LinearLayout>
