<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="8dp">
    <ImageView android:id="@+id/imgUser" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/userprofile"/>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp">
        <TextView android:id="@+id/tvUser"
            android:layout_width="wrap_content"
            android:layout_height="48dp" android:text="User" android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp" android:id="@+id/tvText" android:text="Comment" />
    </LinearLayout>
</LinearLayout>
