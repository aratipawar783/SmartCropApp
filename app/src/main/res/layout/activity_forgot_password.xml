<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F8E9"
    android:padding="24dp">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_forgot"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#31A934"
        app:title="Forgot Password"
        app:titleTextColor="@android:color/white" />

    <!-- Illustration Image -->
    <ImageView
        android:id="@+id/imgForgot"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/forgotpassword"
        android:contentDescription="Forgot password illustration"
        android:layout_gravity="center"
        android:layout_marginTop="32dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitleForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Your Password"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/tvDescForgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your registered phone number to receive an OTP for password reset."
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:padding="8dp" />

    <!-- Country code + phone number (horizontal layout) -->
    <LinearLayout
        android:id="@+id/phone_input_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical">

        <!-- Country Code Spinner -->
        <Spinner
            android:id="@+id/spinnerCountryCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@android:drawable/btn_dropdown"
            android:padding="8dp"/>

        <!-- Phone Input -->
        <EditText
            android:id="@+id/etPhone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone"
            android:padding="12dp"
            />
    </LinearLayout>

    <!-- Send OTP Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSendOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send OTP"
        android:layout_marginTop="24dp"
        android:backgroundTint="#0B0D0B"
        android:textColor="@android:color/white"
        app:cornerRadius="24dp"
        android:layout_gravity="center" />
</LinearLayout>
