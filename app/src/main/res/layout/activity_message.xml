<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
  <ListView android:id="@+id/lvMessages" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
  <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="8dp">
    <EditText
        android:id="@+id/etMessage"
        
        android:layout_width="0dp" android:layout_weight="1" android:layout_height="48dp" android:hint="Type a message" android:layout_marginBottom="40dp"/>
    <Button android:id="@+id/btnSend" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Send" android:layout_marginBottom="40dp"/>
  </LinearLayout>
</LinearLayout>
