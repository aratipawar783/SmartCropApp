<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="8dp">
    <ImageView android:id="@+id/imgUser" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/userprofile"/>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp" android:id="@+id/tvName" android:text="Name" android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp" android:id="@+id/tvPhone" android:text="Phone"/>
    </LinearLayout>
</LinearLayout>
